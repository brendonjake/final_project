<%= form_with model: order, url: path, data: { controller: :location, turbo: false } do |form| %>

  <div class="form-floating mb-4">
    <%= form.number_field :coin, autofocus: true, autocomplete: "coins", class: "form-control" %>
    <%= form.label :coin %>
  </div>

  <div class="form-floating mb-4">
    <%= form.text_field :genre, autofocus: true, autocomplete: "genre", class: "form-control" %>
    <%= form.label :genre %>
  </div>

  <div class="form-floating mb-4">
    <%= form.text_field :remark, autofocus: true, autocomplete: "remarks", class: "form-control" %>
    <%= form.label :remark %>
  </div>

  <%= form.submit 'Create' %>

<% end %>