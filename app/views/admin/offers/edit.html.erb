<%= form_with model: @offer, url: admin_offer_path(@offer), data: { controller: :location, turbo: false } do |form| %>  <h1>Edit Offer</h1>  <div class="form-floating mb-4">    <%= form.file_field :image %>  </div>  <div class="form-floating mb-4">    <%= form.text_area :name, autofocus: true, autocomplete: "name", class: "form-control" %>    <%= form.label :name %>  </div>  <div class="mb-4">    <%= form.label :genre %>    <%= form.select :genre, options_for_select(Offer.genres.map { |genre| [genre.first.humanize, genre.last] }) %>  </div>  <div class="mb-4">    <%= form.label :status %>    <%= form.select :status, options_for_select(Offer.statuses.map(&:first), params[:status]) %>  </div>  <div class="form-floating mb-4">    <%= form.number_field :amount, autocomplete: "amount", class: "form-control" %>    <%= form.label :amount %>  </div>  <div class="form-floating mb-4">    <%= form.number_field :coin, autocomplete: "coins", class: "form-control" %>    <%= form.label :coins %>  </div>  <div class="mb-3 row">    <%= form.submit %>  </div><% end %>