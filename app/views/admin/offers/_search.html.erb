<%= form_tag admin_offers_path, method: 'get', data: { turbo: false } do %>  <div class="row">    <div class="col-6">      <%= label_tag :genre %>      <%= select_tag :genre, options_for_select(Offer.genres.map{ |genre| [genre.first.humanize, genre.last] }) %>    </div>    <div class="col-6">      <%= label_tag :status %>      <%= select_tag :status, options_for_select(Offer.statuses.map(&:first), params[:status]) %>    </div>  </div>  <%= submit_tag 'Search' %>  </div><% end %>