<%= render partial: 'search', locals: { method: :post, path: admin_offers_path  } %><table class="table table-striped table-bordered ">  <thead>  <td>Image</td>  <td>Name</td>  <td>Genre</td>  <td>Status</td>  <td>Amount</td>  <td>Coins</td>  </thead>  <% @offers.each do |offer| %>    <tr>      <td><%= image_tag offer.image.url, width: "100px", height: "100px" if offer.image.present? %></td>      <td><%= offer.name %></td>      <td><%= offer.genre %></td>      <td><%= offer.status %></td>      <td><%= offer.amount %></td>      <td><%= offer.coin %></td>      <td>        <%= link_to 'Edit', edit_admin_offer_path(offer), class: 'btn btn-secondary' %>        <%= button_to 'Delete', admin_offer_path(offer), method: :delete, class: 'btn btn-secondary' %>      </td>    </tr>  <% end %></table><%= link_to 'New', new_admin_offer_path, class: 'btn btn-secondary' %>