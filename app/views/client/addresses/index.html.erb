
<h1>Addresses</h1>

<table class="table table-striped table-bordered ">
  <thead>
  <td>User Id</td>
  <td>Genre</td>
  <td>Name</td>
  <td>Street Address</td>
  <td>Phone Number</td>
  <td>Remark</td>
  <td>Default</td>
  <td>Address</td>
  </thead>
  <% @addresses.each do |address| %>
    <tr>
      <td><%= address.user_id%></td>
      <td><%= address.genre %></td>
      <td><%= address.name %></td>
      <td><%= address.street_address %></td>
      <td><%= address.phone_number %></td>
      <td><%= address.remark %></td>
      <td><%= address.is_default %></td>
      <td><%= "#{address.region&.name} #{address.province&.name} #{address.city&.name} #{address.barangay&.name}" %></td>
      <td>
        <%= link_to 'Edit', edit_client_address_path(address), class: 'btn btn-secondary' %>
        <%= button_to 'Delete', client_address_path(address), method: :delete, class: 'btn btn-secondary' %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'New', new_client_address_path, class: 'btn btn-secondary' %>

