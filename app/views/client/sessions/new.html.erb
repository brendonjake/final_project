<main class="m-auto p-5 m-5 w-25">
  <div class="btn-group w-100">
  <%= link_to 'Sign in', new_client_user_session_path, class:"btn btn-primary active" %>
    <%= link_to 'Register', new_client_user_registration_path, class:"btn btn-primary" %></div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
    <div class="form-floating mb-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      <%= f.label :email %>
    </div>

    <div class="form-floating mb-4">
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
      <%= f.label :password %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check text-start my-3">
        <%= f.check_box :remember_me, class:"form-check-input"%>
        <%= f.label :remember_me, class:"form-check-label" %>
      </div>
    <% end %>

      <%= f.submit "Log in", class:"btn btn-primary w-100" %>

  <% end %>
 </main>



