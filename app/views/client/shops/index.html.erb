<div id="carouselExample" class="carousel slide">  <div class="carousel-inner mb-1">    <div class="carousel-item active d-flex justify-content-center">      <img src="<%= asset_path 'download bg.jpeg' %>" class="align-middle w-75" alt="..." style="height: 300px">    </div>    <div class="carousel-item d-flex justify-content-center">      <img src="<%= asset_path 'download bg.jpeg' %>" class="align-middle w-75" alt="..." style="height: 300px">    </div>    <div class="carousel-item d-flex justify-content-center">      <img src="<%= asset_path 'download bg.jpeg' %>" class="align-middle w-75" alt="..." style="height: 300px">    </div>  </div>  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">    <span class="carousel-control-prev-icon" aria-hidden="true"></span>    <span class="visually-hidden">Previous</span>  </button>  <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">    <span class="carousel-control-next-icon" aria-hidden="true"></span>    <span class="visually-hidden">Next</span>  </button></div><div class="alert alert-dark ms-auto mx-auto align-items-center w-75" role="alert">  Announcement:</div><div class="container marketing ">  <div class="row">    <% @offers.each do |offer| %>      <%= link_to client_shop_path(offer) do %>        <div class="col-3 mb-5">          <div class="card" style="width: 18rem;">            <%= image_tag offer.image.url, width: "100px", height: "100px", class: "card-img-top" if offer.image.present? %>            <div class="card-body">              <%= offer.name %>            </div>          </div>        </div>      <% end %>    <% end %>  </div></div>